<UserControl x:Class="GettingRealWPF.View.AddMaterialView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             Height="625" Width="980">

    <Border Padding="10" Opacity="0.985" Background="#FFE6E6E6">
        <StackPanel Background="#FFE6E6E6" Margin="0,10,0,-10">
            <TextBlock Margin="5 10 0 40" Text="Tilføj materiale til lager" FontSize="17" FontWeight="Bold"/>

            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="50"/>
                    <RowDefinition Height="50"/>
                    <RowDefinition Height="50"/>
                    <RowDefinition Height="50"/>
                    <RowDefinition Height="50"/>
                    <RowDefinition Height="50"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="3*"/>
                </Grid.ColumnDefinitions>

                <!-- Kategori -->
                <TextBlock Grid.Row="0" Grid.Column="0" Text="Kategori" FontWeight="Bold" Margin="25 0 0 5"/>
                <ComboBox Grid.Row="0" Grid.Column="1" Margin="0 0 75 5"
                          ItemsSource="{Binding Categories}"
                          SelectedItem="{Binding SelectedCategory}" />

                <!-- Materiale -->
                <TextBlock Grid.Row="1" Grid.Column="0" Text="Materiale" FontWeight="Bold" Margin="25 0 0 5"/>
                <ComboBox Grid.Row="1" Grid.Column="1" Margin="0 0 75 5"
                          ItemsSource="{Binding Materials}"
                          SelectedItem="{Binding SelectedMaterial}" />

                <!-- Placering -->
                <TextBlock Grid.Row="2" Grid.Column="0" Text="Placering" FontWeight="Bold" Margin="25 0 0 5"/>
                <ComboBox Grid.Row="2" Grid.Column="1" Margin="0 0 75 5"
                          ItemsSource="{Binding Storages}"
                          SelectedItem="{Binding SelectedStorage}" />

                <!-- Nuværende beholdning -->
                <TextBlock Grid.Row="3" Grid.Column="0" Text="Nuværende beholdning" FontWeight="Bold" Margin="25 0 0 5"/>
                <TextBox Grid.Row="3" Grid.Column="1" Margin="0 0 75 5"
                         Text="{Binding CurrentAmount}" IsReadOnly="True" />

                <!-- Tilføj antal -->
                <TextBlock Grid.Row="4" Grid.Column="0" Text="Tilføj antal" FontWeight="Bold" Margin="25 0 0 5"/>
                <TextBox Grid.Row="4" Grid.Column="1" Margin="0 0 75 5"
                         Text="{Binding AmountToAdd}" />

                <!-- Ny beholdning -->
                <TextBlock Grid.Row="5" Grid.Column="0" Text="Ny beholdning" FontWeight="Bold" Margin="25 0 0 5"/>
                <TextBox Grid.Row="5" Grid.Column="1" Margin="0 0 75 5"
                         Text="{Binding UpdatedAmount}" IsReadOnly="True" />
            </Grid>

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,76,10" Width="400" Height="50">
                <Button Content="Annuller" Click="CancelButton_Click" Background="White" Margin="128 0 0 0" Width="130" Height="40" BorderBrush="Black"/>
                <Button Content="Tilføj" Command="{Binding AddCommand}" Background="White" Margin="10 0 0 0" Width="130" Height="40" BorderBrush="Black"/>
            </StackPanel>

            <TextBlock Text="{Binding StatusMessage}" Foreground="Green" Margin="25 10 0 0" FontWeight="Bold"/>
        </StackPanel>
    </Border>
</UserControl>
