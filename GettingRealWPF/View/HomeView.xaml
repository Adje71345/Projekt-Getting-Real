<Window xmlns:viewmodel="clr-namespace:GettingRealWPF.ViewModel"
        x:Class="GettingRealWPF.View.HomeView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GettingRealWPF"
        mc:Ignorable="d"
        Title="HomeView" 
        Height="750" 
        Width="1200"
        WindowStyle="None"
        ResizeMode="NoResize"
        Background="White">
    <Grid>
       
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="220"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <!-- Logo og firmanavn -->
            <RowDefinition Height="100"/>
            <!-- Søgefunktio og filtrering-->
            <RowDefinition Height="50"/>
            <!-- Liste/Hovedindhold-->
            <RowDefinition/>
        </Grid.RowDefinitions>

        <Image Source="/Images/Pro-stål logo.png"
                Width="220"
                HorizontalAlignment="Center"
                Margin="0,-39,0,11"
                Grid.RowSpan="2"/>

        <!-- Menu -->
        <StackPanel Grid.Row="2">

            <RadioButton Content="Lagerliste"
                         Height="50"
                         FontSize="18"
                         FontWeight="DemiBold"
                         Style="{StaticResource MenuButtonTheme}" Checked="RadioButton_Checked"/>

            <RadioButton Content="Registrer materiale"
                         Height="50"
                         FontSize="18"
                         FontWeight="DemiBold"
                         Style="{StaticResource MenuButtonTheme}"/>

            <RadioButton Content="Tilføj materiale"
                         Height="50"
                         FontSize="18"
                         FontWeight="DemiBold"
                         Style="{StaticResource MenuButtonTheme}"/>

            <RadioButton Content="Fjern materiale"
                         Height="50"
                         FontSize="18"
                         FontWeight="DemiBold"
                         Style="{StaticResource MenuButtonTheme}"/>

            <RadioButton Content="Flyt materiale"
                         Height="50"
                         FontSize="18"
                         FontWeight="DemiBold"
                         Style="{StaticResource MenuButtonTheme}"/>

            <RadioButton Content="Rediger materiale"
                         Height="50"
                         FontSize="18"
                         FontWeight="DemiBold"
                         Style="{StaticResource MenuButtonTheme}"/>

        </StackPanel>



        <!-- Søge funktion og Filtrering -->
        <Grid Grid.Row="1" Grid.Column="1" Background="White">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="350"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="200"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="200"/>
            </Grid.ColumnDefinitions>

            <!-- Søge funktion -->
            <!-- Søge funktion -->
            <Border Grid.Column="0" 
        BorderThickness="1" 
        BorderBrush="#ABADB3" 
        Background="#f0f0f0"
        Width="300"
        Height="30"
        VerticalAlignment="Center"
        HorizontalAlignment="Left"
        Margin="10,10,10,10">
                <Grid>
                    <TextBox x:Name="SearchBox" 
                             BorderThickness="0"
                             Background="White"
                             VerticalContentAlignment="Center"
                             Padding="5,0,25,0"
                             Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged}" TextChanged="SearchBox_TextChanged" BorderBrush="#FF020202"/>

                    <TextBlock IsHitTestVisible="False"
                                Text="Søg efter materiale"
                               FontSize="12"
                                VerticalAlignment="Center"
                                HorizontalAlignment="Left"
                                Margin="20,0,0,0"
                                Foreground="#767676">
                        <TextBlock.Style>
                            <Style TargetType="TextBlock">
                                <Setter Property="Visibility" Value="Collapsed"/>
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding Text, ElementName=SearchBox}" Value="">
                                        <Setter Property="Visibility" Value="Visible"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </TextBlock.Style>
                    </TextBlock>

                    <!-- Søge-ikon -->
                    <TextBlock Text="🔍" 
                   Foreground="Black"
                   IsHitTestVisible="False"
                   VerticalAlignment="Center"
                   HorizontalAlignment="Right"
                   Margin="0,0,7,0" 
                   FontSize="12"/>
                </Grid>
            </Border>


            <!-- Filtrering efter kategori-->
            <ComboBox Grid.Column="2" Margin=" 10,10,10,10"
                      ItemsSource="{Binding Categories}"
                      SelectedItem="{Binding SelectedCategory}">

            </ComboBox>
            
            <!-- Filtrering efter placering-->
            <ComboBox Grid.Column="4" Margin=" 10,10,5,10"
                      ItemsSource="{Binding Locations}"
                      SelectedItem="{Binding SelectedLocation}">

            </ComboBox>

        </Grid>

        <!-- DataGrid til lagerliste-->
        <DataGrid Grid.Row="2" Grid.Column="1"
                  Margin="10,0,10,20"
                  AutoGenerateColumns="False"
                  IsReadOnly="True"
                  AlternatingRowBackground="LightGray"
                  CanUserResizeRows="False"
                  GridLinesVisibility="Horizontal"
                  ItemsSource="{Binding InventoryItemsView}"
                  SelectionUnit="FullRow">

            <DataGrid.Columns>
                <DataGridTextColumn Header="Kategori" Width="150" Binding="{Binding Material.Category}"/>
                <DataGridTextColumn Header="Beskrivelse" Width="400" Binding="{Binding Material.Description}"/>
                <DataGridTextColumn Header="Antal" Width="75" Binding="{Binding Amount}"/>
                <DataGridTextColumn Header="Enhed" Width="100" Binding="{Binding Material.MaterialUnit}"/>
                <DataGridTextColumn Header="Placering" Width="175" Binding="{Binding Storage.StorageName}"/>
            </DataGrid.Columns>

        </DataGrid>
        <StackPanel Grid.Column="1"
                    HorizontalAlignment="Right"
                    Orientation="Horizontal"
                    VerticalAlignment="Top"
                    Margin="0,5,10,0">
            <Button Content="—" Width="20" Height="20" Margin="5,0" Click="MinimizeButton_Click" />
            <Button Content="□" Width="20" Height="20" Margin="5,0" Click="MinimizeButton_Click" />
            <Button Content="✕" Width="20" Height="20" Margin="5,0" Click="MinimizeButton_Click" />
        </StackPanel>
    </Grid>
</Window>
