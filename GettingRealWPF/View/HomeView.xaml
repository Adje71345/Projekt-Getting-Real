<Window x:Class="GettingRealWPF.View.HomeView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:uc="clr-namespace:GettingRealWPF.View.UserControls;assembly=GettingRealWPF"
        xmlns:views="clr-namespace:GettingRealWPF.View"
        Title="HomeView" 
        Height="750" 
        Width="1200"
        WindowStartupLocation="CenterScreen">
   

    <!--Hoved Grid-->
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="100"/>
            <RowDefinition Height="625"/>
        </Grid.RowDefinitions>

        <!--Logo område-->
        <Image  Grid.Row="0"  Source="C:\Users\sabin\source\repos\GettingReal\Projekt-Getting-Real\GettingRealWPF\Images\Pro-stål logo.png"
                HorizontalAlignment="Left" VerticalAlignment="Top"
                />

        <!--Indholds Grid-->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="220"/>
                <ColumnDefinition Width="980"/>
            </Grid.ColumnDefinitions>
            <!-- Placeholder for MenuBar -->
            <ContentControl x:Name="menuBarPlaceholder" Grid.Column="0"/>
            <ContentControl Grid.Column="1" Margin="0,10,0,0"
                   Content="{Binding CurrentView}"/>
        </Grid>
    </Grid>


</Window>
