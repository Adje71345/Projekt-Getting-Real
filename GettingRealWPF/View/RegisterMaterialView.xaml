<UserControl x:Class="GettingRealWPF.View.RegisterMaterialView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GettingRealWPF.View"
        mc:Ignorable="d" Height="625" Width="980">
    
    <Border Padding="10" Opacity="0.985" Background="#FFE6E6E6">

        <StackPanel Background="#FFE6E6E6" Margin="0,10,0,-10">
            <TextBlock Margin="5 10 0 40" Text="Registrer materiale" IsEnabled="False" FontSize="17" FontWeight="Bold"/>
            <Grid>
                <Grid.RowDefinitions>
                    <!-- First row -->
                    <RowDefinition Height="50"/>
                    <!-- Second row -->
                    <RowDefinition Height="50"/>
                    <!-- Third row -->
                    <RowDefinition Height="50"/>
                    <!-- Fourth row -->
                    <RowDefinition Height="50"/>
                    <!-- Fith row -->
                    <RowDefinition Height="50"/>
                    <!-- Sixth row -->
                    <RowDefinition Height="100"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <!-- First column -->
                    <ColumnDefinition Width="3*"/>
                    <!-- Second column -->
                </Grid.ColumnDefinitions>

                <!-- First Row -->
                <TextBlock Margin="25 0 0 5" Text="Kategori" FontWeight="Bold" Grid.Row="0" Grid.Column="0"/>
                <ComboBox ItemSource="{Binding Categories}" SelectedItem="{Binding SelectedCategory, Mode=TwoWay}" Margin="0 0 75 5" Grid.Row="0" Grid.Column="1" Grid.ColumnSpan="2" Height="21" VerticalAlignment="Top" BorderBrush="#FF020202"/>
                <!-- Second Row -->
                <TextBlock Margin="25 0 0 5" Text="Beskrivelse" FontWeight="Bold" Grid.Row="1" Grid.Column="0"/>
                <TextBox Text="{Binding SelectedDescription, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Margin="0 0 75 5" Grid.Row="1" Grid.Column="1" Height="21" TextChanged="TextBox_TextChanged" Grid.ColumnSpan="2" VerticalAlignment="Top" BorderBrush="Black"/>
                <!-- Third Row -->
                <TextBlock Margin="25 0 0 5" Text="Antal" FontWeight="Bold" Grid.Row="2" Grid.Column="0"/>
                <TextBox Text="{Binding SelectedQuantity, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Margin="0 0 75 5" Grid.Row="2" Grid.Column="1" Height="21" TextChanged="TextBox_TextChanged" Grid.ColumnSpan="2" VerticalAlignment="Top" BorderBrush="Black"/>
                <!-- Fourth Row -->
                <TextBlock Margin="25 0 0 5" Text="Enhed" FontWeight="Bold" Grid.Row="3" Grid.Column="0"/>
                <ComboBox ItemSource="{Binding SelectedUnit}" SelectedItem="{Binding SelectedUnit, Mode=TwoWay}" Margin="0 0 75 5" Grid.Row="3" Grid.Column="1" Grid.ColumnSpan="2" Height="21" VerticalAlignment="Top"/>
                <!-- Fith Row -->
                <TextBlock Margin="25 0 0 5" Text="Placering" FontWeight="Bold" Grid.Row="4" Grid.Column="0"/>
                <ComboBox ItemSource="{Binding Storages}" SelectedItem="{Binding SelectedStorage, Mode=TwoWay}" Margin="0 0 75 5" Grid.Row="4" Grid.Column="1" Grid.ColumnSpan="2" Height="21" VerticalAlignment="Top"/>
                <!-- Sixth Row -->
                <TextBlock Margin="25 0 0 5" Text="Minimums beholdning" FontWeight="Bold" Grid.Row="5" Grid.Column="0"/>
                <TextBox Text="{Binding SelectedMinimumAmount, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Margin="0 0 75 5" Grid.Row="5" Grid.Column="1" Height="21" TextChanged="TextBox_TextChanged" Grid.ColumnSpan="2" VerticalAlignment="Top" BorderBrush="Black"/>
            </Grid>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,76,0" Width="400" Height="50" VerticalAlignment="Bottom">
                <Button Content="Anuller" Background="White" Margin="128 0 0 0" VerticalAlignment="Center" Width="130" Height="40" BorderBrush="Black"/>
                <Button Content="Gem" Command="{Binding RegisterMaterialCommand}" Background="White" Margin="10 0 0 0" HorizontalAlignment="Right" VerticalAlignment="Center" Width="130" Height="40" BorderBrush="Black"/>
            </StackPanel>
            <TextBlock Text="{Binding VerificationMessage}" HorizontalAlignment="Center" Margin="0,10,0,0" FontSize="14" Foreground="Red"/>
        </StackPanel>
    </Border>
</UserControl>
