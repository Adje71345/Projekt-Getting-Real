<UserControl x:Class="GettingRealWPF.View.UserControls.MenuBar"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             Height="625"
             Width="220"
             Background="White">
    <Grid>

        <!--StackPanel af RadioButtons-->
        <StackPanel Margin="0,5,25,0">
            <StackPanel.Resources>
                <!-- Styling af RadioButtons -->
                <Style x:Key="MenuButtonStyle" TargetType="RadioButton">
                    <Setter Property="Height" Value="60"/>
                    <Setter Property="Margin" Value="5,5,5,5"/>
                    <Setter Property="FontSize" Value="15"/>
                    <Setter Property="FontWeight" Value="Normal"/>
                    <Setter Property="FontFamily" Value="Segoe UI"/>
                    <Setter Property="Foreground" Value="#333333"/>
                    <Setter Property="Template">
                        <Setter.Value>
                            <ControlTemplate TargetType="RadioButton">
                                <Border x:Name="border" 
                                    BorderBrush="#d3d3d3"
                                    BorderThickness="0.5"
                                    Background="White">

                                    <Grid>

                                        <ContentPresenter x:Name="contentPresenter"     
                                                    HorizontalAlignment="Left" 
                                                    VerticalAlignment="Center"
                                                    Margin="15,0,0,0"/>
                                    </Grid>
                                </Border>
                                <ControlTemplate.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter TargetName="border" Property="Background" Value="#f5f5f5"/>
                                        <Setter TargetName="border" Property="BorderBrush" Value="#DDDDDD"/>
                                    </Trigger>
                                    <Trigger Property="IsChecked" Value="True">
                                        <Setter TargetName="border" Property="Background" Value="#DCDBD6 "/>
                                        <Setter TargetName="border" Property="BorderBrush" Value="#f4f4f4"/>

                                        <Setter Property="FontWeight" Value="DemiBold"/>
                                    </Trigger>
                                </ControlTemplate.Triggers>
                            </ControlTemplate>
                        </Setter.Value>
                    </Setter>
                </Style>
            </StackPanel.Resources>

            <!-- RadioButtons med den tilpassede stil -->
            <RadioButton x:Name="rbLagerListe"
                    Content="Lagerliste" 
                    GroupName="MenuGroup"
                    Style="{StaticResource MenuButtonStyle}" />
            <RadioButton x:Name="rbRegisterMaterial"
                    Content="Registrer materiale" 
                    GroupName="MenuGroup" 
                    Style="{StaticResource MenuButtonStyle}" />
            <RadioButton x:Name="rbAddMaterial"
                    Content="Tilføj materiale" 
                    GroupName="MenuGroup" 
                    Style="{StaticResource MenuButtonStyle}" />
            <RadioButton x:Name="rbConsumeMaterial"
                    Content="Fjern materiale" 
                    GroupName="MenuGroup" 
                    Style="{StaticResource MenuButtonStyle}"/>
            <RadioButton x:Name="rbMoveMaterial"
                    Content="Flyt materiale" 
                    GroupName="MenuGroup" 
                    Style="{StaticResource MenuButtonStyle}"/>
        </StackPanel>
    </Grid>
</UserControl>