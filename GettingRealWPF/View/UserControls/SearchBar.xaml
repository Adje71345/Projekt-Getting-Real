<UserControl x:Class="GettingRealWPF.View.UserControls.SearchBar"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             Background="White"
             d:DesignHeight="55" 
             d:DesignWidth="980">
    <Grid Width="980" Height="55">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="450"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Border Grid.Column="0"
                BorderBrush="Gray"
                BorderThickness="0.75"
                Background="White"
                Margin="25,12,0,12">
            <Grid Background="White">
                <TextBox x:Name="txtInput"
                         Text=""
                         TextChanged="txtInput_TextChanged"
                         Background="Transparent"
                         BorderThickness="0"
                         FontSize="16"
                         FontWeight="Light"
                         Foreground="Gray"
                         VerticalContentAlignment="Center"/>

                <TextBlock x:Name="txtPlaceholder"
                           Text="Søg efter materiale" 
                           Margin="5,0,0,0"
                           FontSize="14" 
                           FontWeight="Light"
                           Foreground="DarkGray"
                           VerticalAlignment="Center"
                           Panel.ZIndex="-1"/>

                <Button x:Name="btnClear" 
                        Width="50" 
                        HorizontalAlignment="Right" 
                        Content="X" 
                        Foreground="Gray" 
                        BorderThickness="0"
                        Background="Transparent"
                        Click="btnClear_Click"/>
            </Grid>
        </Border>

       
            <Grid Grid.Column="1"
                  Margin="12,12,12,12">
                <StackPanel Orientation="Horizontal">

                    <TextBlock x:Name="txtSearch"
                               Text=""
                               Visibility="Collapsed"/>

                    <ComboBox x:Name="cmbCategory" 
                              Width="215"
                              SelectionChanged="OnCategorySelectionChanged"
                              VerticalContentAlignment="Center"
                              HorizontalContentAlignment="Center"
                              VerticalAlignment="Stretch"
                            HorizontalAlignment="Stretch">
                    </ComboBox>



                    <ComboBox x:Name="cmbLocation" 
                              Width="215"
                              Margin="15,0,0,0"
                              SelectionChanged="OnLocationSelectionChanged"
                              VerticalContentAlignment="Center"
                              HorizontalContentAlignment="Center"
                              VerticalAlignment="Stretch"
                              HorizontalAlignment="Stretch">
                    </ComboBox>
                </StackPanel>
            </Grid>
     
    </Grid>
</UserControl>